[user]
	name = Alejandro Druetta
	email = aledruetta@gmail.com

[color]
	ui = true
	diff = true
	status = true
	branch = true
	interactive = true

[alias]
	lg = log --graph --abbrev-commit \
		--pretty=format:'%C(auto,yellow)%h%Creset -%C(auto,bold red)%d%Creset %s %C(auto,green)(%cr) %C(auto,bold blue)<%an>%Creset'
	l5 = log --graph --oneline --decorate --date=relative --all
	ls = ls-files
	st = status
	sh = show
	cm = commit
	cmm = commit -m
	ad = add .
	adi = add -i
	adp = add -p
	df = diff
	dh = diff HEAD
	dc = diff --cached
	ds = diff --staged
	ch = checkout
	br = branch
	ft = fetch
	ps = push
	pl = pull
	pr = pull --rebase
	gr = grep --extended-regexp --break --heading --line-number
	search = log --no-merges -i -E --pretty='%h (%ad) - [%an] %s %d' --date=format:'%b %d %Y' --grep
	follow = log --stat --follow -p --


[core]
	editor = vim
	ignorecase = false
	excludefile = ~/.gitignore_global

[push]
	default = simple

[grep]
	break = true
	heading = true
	lineNumber = true
